<!DOCTYPE html>
<html>
<head>
  <title>Jumphost</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="header">
	</div>
	<div id="menu">
		<% if current_user %>
			<div class="menuitem">
				<%= link_to "Edit Profile", edit_user_path(current_user.id) %>
			</div>
			<div class="menuitem">
				<%= link_to "Logout", :logout %>
			</div>
			<div class="menuitem">
				<%= link_to "Appointments", date_path %>
			</div>
		<% else %>
			<div class="menuitem">
				<%= link_to "Register", new_user_path %>  
			</div>
			<div class="menuitem">
				<%= link_to "Login", :login %>
			</div>
		<% end %>
	</div>
	<div id="content">
		<%= yield %>
	</div>
	<div id="footer">
	</div>
</body>
</html>
