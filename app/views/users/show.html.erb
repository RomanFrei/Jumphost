<p id="notice"><%= notice %></p>

<div id="left_corner">

<p class="p_app_show">
  <b>Username:</b>
  <%= @user.username %>
</p>

<p class=p_app_show">
  <b>Email:</b>
  <%= @user.email %>
</p>

</div>

<div id="right_corner">

<h1>Friends</h1>

<table id="app_table">
	<tr>
		<th>Name</th>
		<th>Added</th>
	</tr>

	<tr>
		<% @friends.each do |f| %>
			<td><%= ufinder(f.buddy_id) %></td>
			<td><%= format_time(f.created_at) %></td>
	<tr>
<% end %>
</table>

</div>
